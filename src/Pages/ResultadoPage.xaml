<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TwIndex.Pages.ResultadoPage"
             x:Name="page"
             Title="Resultados">
    <Grid>
        <!-- Loading Indicator -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}" 
                          Color="{DynamicResource PrimaryColor}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />

        <!-- Conteúdo Principal -->
        <ScrollView IsVisible="{Binding Show}">
            <VerticalStackLayout BackgroundColor="White" Spacing="10">

                <!-- Cabeçalho -->
                <VerticalStackLayout HorizontalOptions="Center" 
                                    Margin="0,20" 
                                    Padding="30,0" 
                                    BackgroundColor="White"
                                    Spacing="10">
                    <Label HorizontalTextAlignment="Center" 
                           FontAttributes="Bold" 
                           FontSize="18" 
                           TextColor="Black" 
                           Text="Índice ITW" />

                    <Label FontSize="12" 
                           TextColor="#666666"
                           Text="Os números representam o interesse de pesquisa relativo ao média do último ano. Um valor de 100 representa o pico de popularidade de uma palavra-chave. Um valor de 50 significa que a palavra-chave teve metade da popularidade. Uma pontuação de 0 significa que não havia dados suficientes sobre a palavra-chave." />
                </VerticalStackLayout>

                <!-- Card do Conjunto -->
                <Border Margin="10"
                        Stroke="LightGray"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 8"
                        Padding="15"
                        Shadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Conjunto de Palavras-Chave" 
                               FontSize="12" 
                               TextColor="#666666" />

                        <Label Text="Desempenho Geral" 
                               FontAttributes="Bold" 
                               FontSize="18" 
                               TextColor="Black" />


                        <BoxView Color="Gray" 
                                            HeightRequest="2" 
                                            WidthRequest="80"
                                            HorizontalOptions="Start" />

                        <Label Text="ITW Médio" 
                               FontSize="12" 
                               TextColor="#666666" />

                        <Label TextColor="Black" 
                               FontSize="18" 
                               FontAttributes="Bold"  
                               Text="{Binding Resultado.DesempenhoAnualConjunto, StringFormat='{0:F2}'}" />

                        <Button Command="{Binding PushAsyncGraficoConjuntoCommand}" 
                              BackgroundColor="#280680" 
                              TextColor="White"
                              BorderWidth="0"
                              CornerRadius="25" 
                              FontSize="12" 
                              Padding="20,8"
                              WidthRequest="130"
                              HorizontalOptions="End"
                              Text="Ver Gráfico" /> 
                    </VerticalStackLayout>
                </Border>

                <!-- Lista de Palavras -->
                <CollectionView ItemsSource="{Binding Resultado.DesempenhoAnualPalavra}"
                               Margin="10,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="LightGray"
                                    StrokeThickness="1"
                                    BackgroundColor="White"
                                    StrokeShape="RoundRectangle 8"
                                    Padding="15"
                                    Margin="0,5"
                                    Shadow="True">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Palavra-Chave" 
                                           FontSize="12" 
                                           TextColor="#666666" />

                                    <Label TextColor="Black" 
                                           FontAttributes="Bold" 
                                           FontSize="18" 
                                           Text="{Binding Key}" />

                                    <BoxView Color="Gray" 
                                            HeightRequest="2" 
                                            WidthRequest="80"
                                            HorizontalOptions="Start" />

                                    <Label Text="ITW" 
                                           FontSize="12" 
                                           TextColor="#666666" />

                                    <Label TextColor="Black" 
                                           FontSize="18" 
                                           FontAttributes="Bold"  
                                           Text="{Binding Value, StringFormat='{0:F2}'}" />

                                    <Button Command="{Binding Source={x:Reference page}, Path=BindingContext.PushAsyncGraficoPalavraCommand}" 
                                            CommandParameter="{Binding Key}"
                                            BackgroundColor="#280680" 
                                            TextColor="White"
                                            BorderWidth="0"
                                            CornerRadius="25" 
                                            FontSize="12" 
                                            Padding="20,8"
                                            WidthRequest="130"
                                            HorizontalOptions="End"
                                            Text="Ver Gráfico" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Mensagem de Erro -->
        <VerticalStackLayout IsVisible="{Binding HasError}" 
                             Spacing="24" 
                             Padding="32"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
            
            <Image Source="error_connection.png" 
                   HeightRequest="120"
                   Aspect="AspectFit"
                   Opacity="0.7"/>
            
            <Label Text="{Binding ErrorMessage}"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource DangerColor}"/>
            
            <Label Text="Verifique sua conexão com a internet e tente novamente."
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource Gray600}"
                   Margin="0,0,0,16"/>
            
            <Button Text="Tentar Novamente"
                    Command="{Binding TentarNovamenteCommand}"
                    WidthRequest="200"
                    BackgroundColor="{DynamicResource PrimaryColor}"/>
            
            <Button Text="Voltar"
                    Command="{Binding VoltarCommand}"
                    WidthRequest="200"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource PrimaryColor}"
                    BorderColor="{DynamicResource PrimaryColor}"
                    BorderWidth="1"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>